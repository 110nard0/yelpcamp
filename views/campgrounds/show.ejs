<% layout('layouts/boilerplate') %>
	<div class="row">
		<div class="col-6 offset-3">
			<div class="card mb-3">
				<img class="card-img-top" src="<%= campground.image %>" alt="">
				<div class="card-body">
					<h5 class="card-title">
						<%= campground.title %>
					</h5>
					<p class="card-text">
						<%= campground.description %>
					</p>
				</div>
				<ul class="list-group list-group-flush">
					<li class="list-group-item text-muted">
						<%= campground.location %>
					</li>
					<li class="list-group-item text-muted">$<%= campground.price %>/night</li>
				</ul>
				<div class="card-body m-auto">
					<a class="card-link btn btn-primary px-3 mx-2"
						href="/campgrounds/<%= campground._id %>/edit">Edit</a>
					<form class="d-inline mx-2" action="/campgrounds/<%= campground._id %>?_method=DELETE"
						method="POST">
						<button class="card-link btn btn-danger px-2">Delete</button>
					</form>
				</div>
			</div>
		</div>
	</div>