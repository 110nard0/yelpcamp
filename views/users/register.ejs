<% layout('layouts/boilerplate') %>
<h1>Register</h1>
<form action="/register" class="validated-form" method="POST" novalidate>
	<div class="mb-3">
		<label class="form-label" for="username">Username</label>
		<input class="form-control" id="username" name="user[username]" type="text" required>
		<div class="valid-feedback">Looks good!</div>
	</div>
	<div class="mb-3">
		<label class="form-label" for="email">Email</label>
		<input class="form-control" id="email" name="user[email]" type="email" required>
		<div class="valid-feedback">Looks good!</div>
	</div>
	<div class="mb-3">
		<label class="form-label" for="password">Password</label>
		<input class="form-control" id="password" name="user[password]" type="password" required>
		<div class="valid-feedback">Looks good!</div>
	</div>
	<button class="btn btn-success">Register</button>
</form>